{{! IMAGE }}
{{#if feature.image}}
  <div class='uk-panel'>
    <img src={{feature.image}} alt='Image for {{feature.title}}'>
    {{#if feature.properties.image.credit}}
      <div class='uk-overlay uk-overlay-primary uk-position-bottom uk-text-center'>
        <p class='uk-margin-remove'>{{feature.image.credit}}</p>
      </div>
    {{/if}}
  </div>

{{! IMAGES }}
{{else if feature.images}}
  <div class='uk-position-relative uk-visible-toggle uk-light' uk-slider='center: true'>
    <ul class='uk-slider-items uk-grid'>
      {{#each feature.images as |image|}}
        <li class='uk-width-3-4'>
            <div class='uk-panel'>
                <img src={{image}} alt=''>
                {{!-- <div class='uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom'>
                    <h3 class='uk-margin-remove'>Bottom</h3>
                    <p class='uk-margin-remove'>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div> --}}
            </div>
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}

{{! YOUTUBE }}
{{#if feature.youtube}}
  <div class='uk-grid uk-child-width-1-1'>
    <div>
        <iframe src='{{feature.youtube}}?modestbranding=1&rel=0&showinfo=0&theme=light' width='560' height='315' frameborder='0' allowfullscreen uk-responsive uk-video autoplay=false></iframe>
    </div>
  </div>
{{/if}}

{{! SOUNDCLOUD }}
{{#if feature.audio}}
  <div class='uk-grid uk-child-width-1-1'>
    <iframe width='100%' height='166' scrolling='no' frameborder='no' src='https://w.soundcloud.com/player/?url={{featur.audio}}&amp;color=ff5500&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false'></iframe>
  </div>
{{/if}}

{{! TEXT }}
{{#if feature.description}}
  <div class='uk-child-width-1-1 uk-article uk-margin' uk-grid>
    <div>
      {{{feature.safeDescription}}}
    </div>
  </div>
{{/if}}
