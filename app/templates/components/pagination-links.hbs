<ul class='uk-pagination uk-flex-center' uk-margin>
  {{#if (and meta.prev_page (gt meta.prev_page 1))}}
    <li>
      <a {{action (route-action 'getResults' 1 layerType)}} class='waves-effect'>
        1
      </a>
    </li>
    <li class='uk-disabled'><span>...</span></li>
  {{/if}}
  <li>
    <a {{action (route-action 'getResults' meta.prev_page layerType)}}>
      {{meta.prev_page}}
    </a>
  </li>
  <li class='uk-active'>{{meta.current_page}}</li>
  <li>
    <a {{action (route-action 'getResults' meta.next_page layerType)}}>
      {{meta.next_page}}
    </a>
  </li>
  {{#if (and meta.next_page (lt meta.current_page meta.total_pages))}}
    <li class='uk-disabled'><span>...</span></li>
    <li>
      <a {{action (route-action 'getResults' meta.total_pages layerType)}}>
        {{meta.total_pages}}
      </a>
    </li>
  {{/if}}
</ul>
