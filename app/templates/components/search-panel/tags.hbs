<ul uk-accordion='multiple: true'>
  {{#each model as |category|}}
    <li class={{if category.allChecked 'uk-open'}}>
      {{input type='checkbox' checked=category.checked class='uk-float-left uk-margin-small-right' change=(action 'checkAllTagsInCategory' category)}} <a class='uk-accordion-title' href='#'>{{category.name}}</a>
      <ul class='uk-accordion-content'>
        {{#each category.sortedTags as |tag|}}
          <li class='listed-tag'>
            {{input type='checkbox' id=tag.slug checked=tag.checked change=(action 'checkSingleTag' tag category)}}
            <label for={{tag.slug}}>{{if tag.name tag.name 'Loading...'}}</label>
          </li>
        {{/each}}
      </ul>
    </li>
  {{/each}}
</ul>
